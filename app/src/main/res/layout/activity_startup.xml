<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/loginPage"
    tools:context="Activities.StartUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="171.693dp"
            android:layout_marginTop="144.333dp"
            app:srcCompat="@drawable/logo_voenmeh" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/montserrat_sb"
            android:text="БГТУ “Военмех”"
            android:textColor="#234090"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="304.617dp"
            android:layout_height="55.383dp"
            android:layout_gravity="center"
            android:layout_marginTop="106dp"
            android:backgroundTint="#234090"
            android:fontFamily="@font/montserrat_sb"
            android:text="Авторизация"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="18.460dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>