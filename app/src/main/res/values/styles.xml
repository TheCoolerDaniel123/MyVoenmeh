<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- пользовательская галочка -->

    <style name="colored_checkBox" parent="Theme.AppCompat.Light">
        <!-- selected checkbox color -->
        <item name="colorAccent">@android:color/holo_red_light</item>
        <!-- default/unselected checkbox color -->
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <style name="loginPage" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="AB" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:fontFamily">@font/montserrat_b</item>
        <item name="android:textSize">27sp</item>
    </style>

</resources>